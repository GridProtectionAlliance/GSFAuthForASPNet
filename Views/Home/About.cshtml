@{
    ViewBag.Title = "About";
    ViewBag.Message = "Example User Details:";
}
<h2>@ViewBag.Title.</h2>
<h4>@ViewBag.Message</h4>

<p>
    @this.UserID() Is @(this.UserIsAuthenticated() ? "" : "Not") Authenticated
    <br />
    <br />
    Is Admin: @this.UserIsAdmin()
    <br />
    Is Admin or Editor: @this.UserIsAdminOrEditor()
    <br />
</p>